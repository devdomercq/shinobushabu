<!DOCTYPE html>
<html>
  <head>
    <title>Workspace</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
    <link href="https://fonts.googleapis.com/css?family=Lato:400,700|Tangerine:400,700" rel="stylesheet">
  </head>
  <body>
     <!-- ============ Navigation Bar  ============= -->  
    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="row">
        <!-- Brand and toggle get grouped for better mobile display -->
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <%= link_to root_path do %>
              <%= image_tag("logo.png", :alt => "Shinobu Shabu", class: 'navbar-brand shinobu-logo') %>
            <% end %>
          </div>
          <!-- Collect the nav links, forms, and other content for toggling -->
          <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav main-nav  clear ">
              <li><%= link_to "WELCOME", root_path, class: 'color_animation' %></li>
              <li><%= link_to "ABOUT", about_path, class: 'color_animation' %></li>
              <li><%= link_to "MENU", menu_path, class: 'color_animation' %></li>
              <li><%= link_to "RESERVATIONS", reservations_path, class: 'color_animation' %></li>
              <li><%= link_to "LOCATION", location_path, class: 'color_animation' %></li>
              <li><%= link_to "CONTACT", contact_path, class: 'color_animation' %></li>
            </ul>
          </div><!-- /.navbar-collapse -->
        </div>
      </div><!-- /.container-fluid -->
    </nav>  
  
    <%= yield %>
    
  <!-- ============ Footer Section  ============= -->
  <div class="navbar-fixed-bottom">
    <footer class="footer">
      <div class="container">
        <div class="col-md-4">
          <p class="sub-footer-text text-center">&copy; 2017 Shinobu Shabu</p>
        </div>
        <div class="col-md-4">
          <p class="sub-footer-text text-center">
            <%= link_to 'http://www.facebook.com/362136063915634', target: :_blank do %>
              <i class="fa fa-facebook fa-fw fa-lg"></i>
            <% end %>
            <%= link_to 'http://instagram.com/shinobushabu', target: :_blank do %>
              <i class="fa fa-instagram fa-fw fa-lg"></i>
            <% end %>
            <%= link_to 'http://www.yelp.com/biz/shinobu-shabu-westminster-2', target: :_blank do %>
              <i class="fa fa-yelp fa-fw fa-lg"></i></p>
            <% end %>
            
        </div>
        <div class="col-md-4">
          <p class="sub-footer-text text-center">Phone: (714) 891-9992</p>
        </div>
      </div>
    </footer>
  </div>  
  
  
  </body>
</html>
